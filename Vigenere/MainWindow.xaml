<Window x:Class="Vigenere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vigenere"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Cifru Vigenere Polialfabetic" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Text clar / Criptat:"/>
            <TextBox x:Name="TxtInput" Height="60" TextWrapping="Wrap" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="CRIPTEAZĂ" Click="BtnCriptare_Click" Width="120" Margin="5" Background="LightBlue"/>
                <Button Content="DECRIPTEAZĂ" Click="BtnDecriptare_Click" Width="120" Margin="5" Background="LightGreen"/>
            </StackPanel>

            <TextBlock Text="Rezultat:" Margin="0,10,0,0"/>
            <TextBox x:Name="TxtResult" Height="100" IsReadOnly="True" TextWrapping="Wrap" Background="#F9F9F9"/>
        </StackPanel>
    </Grid>
</Window>
